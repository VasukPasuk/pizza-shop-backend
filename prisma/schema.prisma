generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  password       String
  login          String   @unique
  activated      Boolean  @default(false)
  activationLink String?  @unique
  role           roles?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  email          String?  @unique
  name           String?
  first_surname  String?
  second_surname String?
  age            Int?
  Cart           Cart[]
  Likes          Likes[]

  @@map("user")
}

model Admin {
  id Int @id

  @@map("admin")
}

model Customer {
  id           Int      @id
  Review       Review[]
  phone        String   @unique
  city         String
  district     String
  house_number Int

  @@map("customer")
}

model Pizza {
  id           Int      @id
  name         String   @unique
  price        Int
  category     Category @relation(fields: [categoryName], references: [name], onDelete: Cascade)
  categoryName String
  weight       Int
  size         sizes
  imageURL     String   @unique
  rating       Int
  available    Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Cart         Cart[]
  Review       Review[]

  @@map("pizza")
}

model Category {
  id          Int     @default(autoincrement())
  name        String  @id @unique
  description String
  Pizza       Pizza[]

  @@map("category")
}

model Cart {
  id      Int   @id
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  pizza   Pizza @relation(fields: [pizzaId], references: [id], onDelete: Cascade)
  userId  Int
  pizzaId Int

  @@map("cart")
}

model Review {
  id       Int      @id @default(autoincrement())
  text     String
  rating   Int
  author   Customer @relation(fields: [authorId], references: [id], onDelete: Cascade)
  pizza    Pizza    @relation(fields: [pizzaId], references: [id], onDelete: Cascade)
  pizzaId  Int
  authorId Int
  Likes    Likes[]

  @@map("review")
}

model Likes {
  id         Int      @id @default(autoincrement())
  liked      Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  review     Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewId   Int
  userId     Int
}

enum sizes {
  small
  medium
  height
}

enum roles {
  ADMIN
  CUSTOMER
}
